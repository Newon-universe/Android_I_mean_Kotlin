<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유저아이디"
        android:fontFamily="@font/rixgob"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/rankTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실버"
        android:textSize="20sp"
        android:fontFamily="@font/rixgob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/userId"/>

    <TextView
        android:id="@+id/bustTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그린"
        android:textSize="20sp"
        android:fontFamily="@font/rixgob"
        app:layout_constraintTop_toBottomOf="@id/rankTier"
        app:layout_constraintStart_toStartOf="@id/rankTier"
        app:layout_constraintEnd_toEndOf="@id/rankTier"/>


</androidx.constraintlayout.widget.ConstraintLayout>