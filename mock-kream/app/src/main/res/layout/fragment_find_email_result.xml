<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.login.find_email.find_email_result.FindEmailResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_login_find_email_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="5dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/my_login_find_email_result_toolbar_back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_goods_main_toolbar_arrow_back_24"
            android:tint="@color/black"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/my_login_find_email_toolbar"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/find_email_result_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_find_email_result_check"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_email_result_notification"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/my_login_find_email_result_notification"
            android:textSize="20sp"
            android:textColor="@color/blackForText"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toBottomOf="@id/find_email_result_check"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_email_result_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_login_find_email_result_email_address"
            android:textSize="12sp"
            android:textColor="@color/blackForText"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/find_email_result_notification"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/find_email_result_email_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_login_find_email_result_email_sample"
            android:textColor="@color/softBlackForText"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:clickable="false"
            app:layout_constraintTop_toBottomOf="@id/find_email_result_email"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_email_result_find_password_btn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:background="@drawable/shape_black_strok_white_solid"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/my_login_find_password"
            android:textColor="@color/softBlackForText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/find_email_result_login_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_email_result_email_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_email_result_login_btn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:background="@drawable/shape_black_solid_rounded_corner"
            android:text="@string/my_login"
            android:textSize="15sp"
            android:textColor="@color/my_profile_background_default_color"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toBottomOf="@id/find_email_result_email_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/find_email_result_find_password_btn"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>