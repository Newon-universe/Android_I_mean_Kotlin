<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goods_main_Like_bottom_sheet_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_main_like"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/blackForText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/goods_bottom_like_sheet_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_goods_bottom_close"
        android:tint="@color/black"
        android:background="@color/transparency"
        app:layout_constraintStart_toEndOf="@id/goods_main_Like_bottom_sheet_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="@id/goods_main_Like_bottom_sheet_notification"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_bottom_sheet_size_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/goods_bottom_like_sheet_close_btn"
        app:layout_constraintStart_toStartOf="@id/goods_bottom_like_sheet_close_btn"
        app:layout_constraintEnd_toEndOf="@id/goods_bottom_like_sheet_close_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>