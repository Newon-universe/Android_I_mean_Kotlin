<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/goods_bottom_recycler_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:contextClickable="true"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    style="@style/Widget.MaterialComponents.BottomSheet"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goods_bottom_recycler_size_button"
        android:layout_width="180dp"
        android:layout_height="45dp"
        app:layout_constraintWidth_percent="0.48"
        android:background="@drawable/goods_main_information_card_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goods_bottom_recycler_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_bottom_recyclerview_size_sample"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/goods_bottom_recycler_size_button"
        app:layout_constraintEnd_toEndOf="@id/goods_bottom_recycler_size_button"
        app:layout_constraintTop_toTopOf="@id/goods_bottom_recycler_size_button" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goods_bottom_recycler_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_bottom_recyclerview_price_sample"
        android:textSize="11sp"
        android:textColor="@color/redForText"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/goods_bottom_recycler_size_tv"
        app:layout_constraintBottom_toBottomOf="@id/goods_bottom_recycler_size_button"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/goods_bottom_recycler_size_tv"
        app:layout_constraintEnd_toEndOf="@id/goods_bottom_recycler_size_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>