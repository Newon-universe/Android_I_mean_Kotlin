<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/shop_type_sample_recyclerview_item_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/shop_type_sample_recyclerview_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_type_sample_sample_text"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/shop_type_sample_recyclerview_item_image_view"
        app:layout_constraintStart_toStartOf="@id/shop_type_sample_recyclerview_item_image_view"
        app:layout_constraintEnd_toEndOf="@id/shop_type_sample_recyclerview_item_image_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>